<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollaborativeStoryBuilder"
        tools:targetApi="31">
        <activity
            android:name=".StoryHandler.StoryViewer"
            android:exported="false"
            android:label="@string/title_activity_story_viewer"
            android:theme="@style/Theme.CollaborativeStoryBuilder.NoActionBar" />
        <activity
            android:name=".MainApp.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainApp.RegisterActivity" />
        <activity android:name=".MainApp.MainActivity" />
        <activity android:name=".StoryHandler.CollaborativeStory" />
    </application>

</manifest>